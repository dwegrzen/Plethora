<div class="container">
  <h4 id="notice"><span class="label label-info"><%= notice %></span></h4>
</div>

<div id="searchBarAndButton">
  <%= form_tag search_path, method: "get" do %>
  <%= select_tag(:searchtype, options_for_select([['All'],['TV'],['Movie'],['Music']], selected: params[:searchtype]), class: 'form-control', id: 'searchType') %>
  <%= text_field_tag :search, params[:search], placeholder: "Search by title or artist", id: 'searchBar', required: true %>
  <%= button_tag(type: 'submit', class: 'btn', id: 'searchBtn') do %>
    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
  <% end %>
  <% end %>
</div>

<div class="container">
  <div class="row">
    <div id="results">

    </div>
  </div>
</div>

<% if current_user.stackings == [] %>
<div class="container emptyQueue">
  <div class="row" id="emptyQueueImages">
    <div class="col-sm-4" id="showSample" style="background-image: url('<%= @showsample %>'); background-position: top; background-size: cover;">
    </div>
    <div class="col-sm-4" id="albumSample" style="background-image: url('<%= @albumsample %>'); background-position: center; background-size: cover;">
    </div>
    <div class="col-sm-4" id="movieSample" style="background-image: url('<%= @moviesample %>'); background-position: top; background-size: cover;">
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12" id="bannerNewUser">
      <h1 class="text-center">Welcome to Plethora</h1>
    </div>
  </div>
  <div class="row">
    <h2>Think of something you wanted to catch up on and search for it above.</h2>
    <h4 class="text-center">Select a specific type of media or search all types at once.</h4>
  </div>
</div>

<% end %>



