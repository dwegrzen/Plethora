<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3" id="signupForm">

    <div class="form-inputs">
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, 'Sign Up', class: "btn center-block", id: "signupFormBtn" %>
    </div>
  <% end %>
 </div>
