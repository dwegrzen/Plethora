<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="col-sm-6 col-sm-offset-3" id="signupForm">

    <div class="form-inputs">
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: "btn-primary" %>
    </div>
  <% end %>
 </div>
