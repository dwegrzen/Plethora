<div class="mainContent container">
  <h4 id="notice"><span class="label label-info"><%= notice %></span></h4>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3" id="login">
      <h1 class="text-center">Password Reset</h1>
    </div>
  </div>
  <div class="row">
    <%= simple_form_for :user, url: password_resets_path, method: "post" do |f| %>
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3"  id="loginForm">
      <div class="form-inputs">
        <%= f.input :email, required: true %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Reset Password", class: "btn center-block", id: "loginFormBtn" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
