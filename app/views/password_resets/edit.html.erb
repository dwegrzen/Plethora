<div class="mainContent container">
  <h4 id="notice"><span class="label label-info"><%= notice %></span></h4>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3" id="login">
      <h1 class="text-center">Password Reset</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3"  id="loginForm">
      <%= simple_form_for @user, :url => password_reset_path(params[:id]) do |f| %>
        <div class="form-inputs">
          <%= f.input :password %>
          <%= f.input :password_confirmation, required: true %>

        </div>

        <div class="form-actions">
          <%= f.button :submit, 'Update Password', class: "btn center-block", id: "loginFormBtn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
