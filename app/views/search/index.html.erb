<h4 id="notice"><span class="label label-info"><%= notice %></span></h4>

<%= form_tag search_path, id: 'searchBarAndButton', method: "get" do %>
<%= text_field_tag :search, params[:search], placeholder: "Search by title or artist", id: 'searchBar' %>
<%= text_field_tag :searchType, params[:searchType], id: 'hiddenField', class: 'hidden' %>

<%= button_tag(type: 'submit', class: 'btn', id: 'searchBtn') do %>
  <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
<% end %>

<% end %>

